# ==================================
# ID CULTURAL - CONFIGURACIÓN
# ==================================

# Entorno (development, staging, production)
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# Base de Datos
DB_HOST=db
DB_PORT=3306
DB_NAME=idcultural
DB_USER=runatechdev
DB_PASS=your_secure_password_here

# Seguridad
APP_KEY=generate_with_openssl_rand_base64_32
JWT_SECRET=generate_with_openssl_rand_base64_64
SESSION_LIFETIME=7200

# Email (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@idcultural.gob.ar
SENDGRID_FROM_NAME=ID Cultural - Subsecretaría de Cultura

# Gmail Backup (opcional)
GMAIL_USERNAME=your_gmail_here
GMAIL_APP_PASSWORD=your_16_char_app_password
EMAIL_DEBUG=false

# Redis (Caché)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Uploads
UPLOAD_MAX_SIZE=5242880
UPLOAD_DIR=/var/www/app/storage/uploads
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logs
LOG_LEVEL=debug
LOG_PATH=/var/www/app/storage/logs

# Google Translate (opcional)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_key_here

# ngrok (desarrollo)
NGROK_ENABLED=false
NGROK_AUTHTOKEN=your_ngrok_token_here